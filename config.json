{
    "name": "Shapes_ChyVAE",
    "n_gpu": 1,

    "arch": {
        "type": "ShapesChyVae",
        "args": {
            "z_dim": 10,
            "data_dim": 4096
        }
    },
    "data_loader": {
        "type": "dSpriteDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 2048,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "elbo",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": false
    }
}
